@{
    ViewData["Title"] = "ListTasks";
}
@model List<Tasks>

@foreach (var task in Model)
{
    <p>@task.Description</p>
    <p>@task.DueDate</p>
    <p>@task.Complete</p>
    <form asp-controller="Tasks" asp-action="UpdateTask">
        <input type="hidden" name="TaskId" value="@task.TaskId" />
        <input type="submit" value="Update Task" />
    </form>
    <form asp-controller="Tasks" asp-action="DeleteTask">
        <input type="hidden" name="TaskId" value="@task.TaskId" />
        <input type="submit" value="Delete Task" />
    </form>
    <br />
}

<a asp-controller="Tasks" asp-action="AddTask">Add a task.</a>